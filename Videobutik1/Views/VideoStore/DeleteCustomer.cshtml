@model Videobutik1.Models.CustomerModel

@{
    ViewBag.Title = "DeleteCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Customer</h2>


<div>

    @if (ViewBag.HasActiveRental)
    {
        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(model => model.Name)
                <p>This customer has active rentals. These need to be returned before customer can be removed!</p>
            </dd>
        </dl>
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Show active rentals", "ListActiveRentals")
            </div>
        }

    }
    else
    {

        <h3>Are you sure you want to delete this?</h3>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneNo)
            </dd>

        </dl>
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to Customers", "ListCustomers")
            </div>
        }

    }



</div>
