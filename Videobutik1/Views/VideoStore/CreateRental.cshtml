@model Videobutik1.Models.RentalModel
@*@model Videobutik1.Models.CustomerModel*@

@{
    ViewBag.Title = "CreateRental";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@TempData["mydata"]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    try
    {
        <div class="form-horizontal">
            <h4>RentalModel</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Choose a movie :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.MovieId, new SelectList(ViewBag.ListMovies, "MovieId", "Name"))
                    @*@Html.EditorFor(model => model.MovieId, new {htmlAttributes = new {@class = "form-control"}})*@
                    @Html.ValidationMessageFor(model => model.MovieId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Choose customer :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CustomerId, new SelectList(ViewBag.ListCustomers, "CustomerId", "Name"))
                    @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>



        </div>

    }
    catch {<h1>NO RENTAL POSSIBLE!!</h1> }

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
